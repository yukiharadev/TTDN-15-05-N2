<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_giao_dich_form" model="ir.ui.view">
            <field name="name">giao_dich</field>
            <field name="model">giao_dich</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_read_only" style="font-size:25px">Nhân viên</div>
                        <group col="4" string="Thông tin chung">
                            <field name="amount"/>
                            <field name="payment_method"/>
                             <field name="khach_hang_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_giao_dich_tree" model="ir.ui.view">
            <field name="name">giao_dich</field>
            <field name="model">giao_dich</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="amount"/>
                    <field name="payment_method"/>
                    <field name="khach_hang_id"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="giao_dich_search">
            <field name="model">giao_dich</field>
            <field name="arch" type="xml">
                <search>
                    <field name="amount"/>
                    <field name="payment_method"/>
                     <field name="khach_hang_id"/>
                </search>
            </field>
        </record>

        <record id="action_giao_dich" model="ir.actions.act_window">
            <field name="name">Giao dịch</field>
            <field name="res_model">giao_dich</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref = "giao_dich_search"/>
        </record>
    </data>
</odoo>


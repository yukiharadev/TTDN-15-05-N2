<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_khach_hang_form" model="ir.ui.view">
            <field name="name">khach_hang</field>
            <field name="model">khach_hang</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_read_only" style="font-size:25px">Khách hàng</div>
                        <group col="4" string="Thông tin chung">
                            <field name="first_name"/>
                            <field name="last_name"/>
                            <field name="email"/>
                            <field name="phone"/>
                            <field name="address"/>
                            <field name="birthday"/>
                            <field name="loai_khach_hang"/>
                        </group>
                        <notebook>
                            <page string="Danh sách phiếu hỗ trợ">
                                <field name="phieu_ho_tro_ids"/>
                            </page>
                            <page string="Danh sách giao dịch">
                                <field name="giao_dich_ids"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_khach_hang_tree" model="ir.ui.view">
            <field name="name">khach_hang</field>
            <field name="model">khach_hang</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="first_name"/>
                    <field name="last_name"/>
                    <field name="full_name"/>
                    <field name="email"/>
                    <field name="phone"/>
                    <field name="address"/>
                    <field name="birthday"/>
                    <field name="loai_khach_hang"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="khach_hang_search">
            <field name="model">khach_hang</field>
            <field name="arch" type="xml">
                <search>
                    <field name="first_name"/>
                    <field name="last_name"/>
                    <field name="email"/>
                    <field name="phone"/>
                    <field name="address"/>
                    <field name="birthday"/>
                    <field name="loai_khach_hang"/>
                </search>
            </field>
        </record>

        <record id="action_khach_hang" model="ir.actions.act_window">
            <field name="name">Khách hàng</field>
            <field name="res_model">khach_hang</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref = "khach_hang_search"/>
        </record>
    </data>
</odoo>


<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_phieu_ho_tro_form" model="ir.ui.view">
            <field name="name">phieu_ho_tro</field>
            <field name="model">phieu_ho_tro</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_read_only" style="font-size:25px">Phiếu hỗ trợ</div>
                        <group col="4" string="Thông tin chung">
                            <field name="tieu_de"/>
                            <field name="description"/>
                            <field name="trang_thai"/>
                            <field name="muc_do"/>
                            <field name="ngay_tao"/>
                            <field name="ngay_xu_ly"/>
                            <field name="khach_hang_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_phieu_ho_tro_tree" model="ir.ui.view">
            <field name="name">phieu_ho_tro</field>
            <field name="model">phieu_ho_tro</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="tieu_de"/>
                    <field name="description"/>
                    <field name="trang_thai"/>
                    <field name="muc_do"/>
                    <field name="ngay_tao"/>
                    <field name="ngay_xu_ly"/>
                    <field name="khach_hang_id"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="phieu_ho_tro_search">
            <field name="model">phieu_ho_tro</field>
            <field name="arch" type="xml">
                <search>
                    <field name="tieu_de"/>
                    <field name="description"/>
                    <field name="trang_thai"/>
                    <field name="muc_do"/>
                    <field name="ngay_tao"/>
                    <field name="ngay_xu_ly"/>
                    <field name="khach_hang_id"/>
                </search>
            </field>
        </record>

        <record id="action_phieu_ho_tro" model="ir.actions.act_window">
            <field name="name">Phiếu hỗ trợ</field>
            <field name="res_model">phieu_ho_tro</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref = "phieu_ho_tro_search"/>
        </record>
    </data>
</odoo>


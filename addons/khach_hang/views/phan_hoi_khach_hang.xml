<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_phan_hoi_khach_hang_form" model="ir.ui.view">
            <field name="name">phan_hoi_khach_hang</field>
            <field name="model">phan_hoi_khach_hang</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_read_only" style="font-size:25px">Hợp đồng</div>
                        <group col="4" string="Thông tin chung">
                            <field name="ma_phan_hoi"/>
                            <field name="loai_phan_hoi"/>
                            <field name="noi_dung"/>
                            <field name="ngay_danh_gia"/>
                            <field name="khach_hang_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_phan_hoi_khach_hang_tree" model="ir.ui.view">
            <field name="name">phan_hoi_khach_hang</field>
            <field name="model">phan_hoi_khach_hang</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="ma_phan_hoi"/>
                    <field name="loai_phan_hoi"/>
                    <field name="noi_dung"/>
                    <field name="ngay_danh_gia"/>
                    <field name="khach_hang_id"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="phan_hoi_khach_hang_search">
            <field name="model">phan_hoi_khach_hang</field>
            <field name="arch" type="xml">
                <search>
                    <field name="ma_phan_hoi"/>
                    <field name="loai_phan_hoi"/>
                    <field name="noi_dung"/>
                    <field name="ngay_danh_gia"/>
                    <field name="khach_hang_id"/>
                </search>
            </field>
        </record>

        <record id="action_phan_hoi_khach_hang" model="ir.actions.act_window">
            <field name="name">Hợp đồng</field>
            <field name="res_model">phan_hoi_khach_hang</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref = "phan_hoi_khach_hang_search"/>
        </record>
    </data>
</odoo>


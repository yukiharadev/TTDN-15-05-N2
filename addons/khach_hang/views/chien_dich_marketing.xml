<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_chien_dich_marketing_form" model="ir.ui.view">
            <field name="name">chien_dich_marketing</field>
            <field name="model">chien_dich_marketing</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_read_only" style="font-size:25px">Chiến dịch Marketing</div>
                        <group col="4" string="Thông tin chung">
                            <field name="ma_chien_dich"/>
                            <field name="ten_chien_dich"/>
                            <field name="mo_ta"/>
                            <field name="ngay_bat_dau"/>
                            <field name="ngay_ket_thuc"/>
                            <field name="ngay_ket_thuc"/>
                            <field name="ngan_sach"/>
                            <field name="giai_doan_trien_khai"/>
                        </group>
                        <notebook>
                            <page string="Báo cáo Marketing">
                                <field name="bao_cao_mkt_ids"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_chien_dich_marketing_tree" model="ir.ui.view">
            <field name="name">chien_dich_marketing</field>
            <field name="model">chien_dich_marketing</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="ma_chien_dich"/>
                    <field name="ten_chien_dich"/>
                    <field name="mo_ta"/>
                    <field name="ngay_bat_dau"/>
                    <field name="ngay_ket_thuc"/>
                    <field name="ngay_ket_thuc"/>
                    <field name="ngan_sach"/>
                    <field name="giai_doan_trien_khai"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="chien_dich_marketing_search">
            <field name="model">chien_dich_marketing</field>
            <field name="arch" type="xml">
                <search>
                    <field name="ma_chien_dich"/>
                    <field name="ten_chien_dich"/>
                    <field name="mo_ta"/>
                    <field name="ngay_bat_dau"/>
                    <field name="ngay_ket_thuc"/>
                    <field name="ngay_ket_thuc"/>
                    <field name="ngan_sach"/>
                    <field name="giai_doan_trien_khai"/>
                </search>
            </field>
        </record>

        <record id="action_chien_dich_marketing" model="ir.actions.act_window">
            <field name="name">Chiến dịch Marketing</field>
            <field name="res_model">chien_dich_marketing</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref = "chien_dich_marketing_search"/>
        </record>
    </data>
</odoo>

